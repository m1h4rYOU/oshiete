<div class="questions-contents">
  <link href="/questions/new.css" rel="stylesheet">

  <header class="recipes-create-header">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top" style="background-color:#2e499d;">
      <%= link_to image_tag('/assets/logo-y.png' , size: '260x28'), "/" %>
    </nav>
  </header>

  <div class="questions-main">
    <h2 class="questions-title">質問を作成する</h2>
    <%= form_with model:@question, url:recipe_questions_path, id: 'new_question', local: true do |f| %>
      <div class="row">
        <div class="col-8">
          <%= f.text_area :text, class:"questions-text", id:"question_text", placeholder:"質問内容（必須 1,000文字まで）", size: "48x4", maxlength:"1000" %>
        </div>
        <div class="col-4">
          <%= f.submit "送信", id: "submit", class:"question-post-btn" %>
          <%= link_to 'もどる', root_path, class:"question-back-btn" %>
        </div>
      </div>
    <% end %>

    <div class="questions">
        <div class="question-user-name">
          <!-- 投稿したユーザー名情報を出力する (開発中)-->
          <% @questions.reverse_each do |question| %>
            <p>投稿者: <%= current_user.nickname %></p>
          <% end %>
        </div>
      <div class="question-date">
        <!-- 投稿した時刻を出力する -->
        <% @questions.reverse_each do |question| %>
        <p>投稿日時: <%= question.created_at %></p>
        <% end %>
      </div>
      <div class="question-message">
        <% @questions.reverse_each do |question| %>
          <p><%= question.text %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>