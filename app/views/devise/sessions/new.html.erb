<link href="users.css" rel="stylesheet">

<div class="user-contents">

  <header class="user-header">
      <%= link_to image_tag('/assets/logo-y.png' , size: '270x28'), "/" %>
  </header>

  <div class="user-main">

    <h3>ログイン</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength:"40" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", maxlength:"40" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="guest">
        <%= link_to 'ゲストログイン（一般ユーザー）', recipes_guest_sign_in_path, method: :post %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

  </div>

</div>

<%= render "devise/shared/links" %>
